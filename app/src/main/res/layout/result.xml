<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp">
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="2dp">
            <ImageView
                android:id="@+id/image_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="visible"
                android:src="@drawable/stress_bar1" />
            <ImageView
                android:id="@+id/image_22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/stress_bar2" />
            <ImageView
                android:id="@+id/image_33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/stress_bar3" />
            <ImageView
                android:id="@+id/image_44"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/stress_bar4" />
            <ImageView
                android:id="@+id/image_55"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/stress_bar5" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90sp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/mainfont_2"
            android:text="김슈니"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/mainfont_2"
            android:text=" 님의 마음 점수는"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="120sp">
        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/mainfont_2"
            android:text="0"
            android:textSize="45sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/mainfont_2"
            android:text="점"
            android:textSize="45sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/explain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mainfont_2"
        android:text="매우 낮은 스트레스"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="210sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="260sp">
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="visible"
                android:src="@drawable/profile_stress_1" />
            <ImageView
                android:id="@+id/image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/profile_stress_2" />
            <ImageView
                android:id="@+id/image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/profile_stress_3" />
            <ImageView
                android:id="@+id/image_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/profile_stress_4" />
            <ImageView
                android:id="@+id/image_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:visibility="invisible"
                android:src="@drawable/profile_stress_5" />
        </FrameLayout>

        <TextView
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mainfont"
            android:text="스트레스가 거의 없음"
            android:textColor="#707070"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:lineSpacingExtra="10dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_round_main"
        android:fontFamily="@font/mainfont"
        android:text="시작하기"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>