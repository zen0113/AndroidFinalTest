<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_margin="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 정보"
                android:textColor="@color/black"
                android:fontFamily="@font/mainfont"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="100sp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50sp">
                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:visibility="visible"
                        android:src="@drawable/profile_stress_1" />
                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@drawable/profile_stress_2" />
                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@drawable/profile_stress_3" />
                    <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@drawable/profile_stress_4" />
                    <ImageView
                        android:id="@+id/image_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@drawable/profile_stress_5" />
                </FrameLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김슈니"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mainfont_2"
                    android:textSize="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">
                    <TextView
                        android:id="@+id/birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2002.09.07"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp"
                        android:layout_marginLeft="125sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여자"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/edit"
                    android:layout_width="110sp"
                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/mainfont"
                    android:text="내 정보 수정"
                    android:background="@drawable/memo_background"
                    android:layout_marginBottom="10sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마음 지도 개수"
                android:textColor="@color/black"
                android:fontFamily="@font/mainfont"
                android:textSize="15sp"
                android:layout_marginTop="60sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="25sp">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/profile_stress_1" />
                    <TextView
                        android:id="@+id/cnt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0개"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="25sp">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/profile_stress_2" />
                    <TextView
                        android:id="@+id/cnt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0개"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="25sp">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/profile_stress_3" />
                    <TextView
                        android:id="@+id/cnt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0개"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="25sp">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/profile_stress_4" />
                    <TextView
                        android:id="@+id/cnt_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0개"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/profile_stress_5" />
                    <TextView
                        android:id="@+id/cnt_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0개"
                        android:layout_marginTop="20sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mainfont"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <!--
            <Button
                android:id="@+id/clear"
                android:layout_width="130sp"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginTop="200sp"
                android:layout_marginBottom="100sp"
                android:fontFamily="@font/mainfont"
                android:text="마음 지도 초기화"
                android:background="@drawable/memo_background"/>
                -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/menu_3"
        android:padding="24sp">
        <Button
            android:id="@+id/menu_write"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="#00ff0000"
            android:layout_marginLeft="33sp"/>

        <Button
            android:id="@+id/menu_home"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="#00ff0000"
            android:layout_marginLeft="88sp"/>
    </LinearLayout>
</RelativeLayout>